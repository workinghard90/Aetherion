import React, { useEffect, useState } from 'react';
import { View, Text, FlatList, TouchableOpacity, StyleSheet, ActivityIndicator } from 'react-native';
import { getUniverse } from '../services/api';

export default function HomeScreen() {
  const [entities, setEntities] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    getUniverse()
      .then(data => setEntities(data))
      .catch(console.error)
      .finally(() => setLoading(false));
  }, []);

  if (loading) {
    return (
      <View style={styles.center}>
        <ActivityIndicator size="large" color="#6200ee" />
      </View>
    );
  }

  return (
    <FlatList
      data={entities}
      keyExtractor={item => item.id.toString()}
      renderItem={({ item }) => (
        <TouchableOpacity style={styles.item}>
          <Text style={styles.name}>{item.name}</Text>
        </TouchableOpacity>
      )}
      ListEmptyComponent={<Text style={styles.empty}>No entities found</Text>}
    />
  );
}

const styles = StyleSheet.create({
  center: { flex:1, justifyContent:'center', alignItems:'center' },
  item: { padding:16, borderBottomWidth:1, borderColor:'#eee' },
  name: { fontSize:18 },
  empty: { textAlign:'center', margin:20, color:'#666' }
});

import axios from 'axios';

const API_URL = process.env.EXPO_PUBLIC_API_URL || 'https://aetherionai.onrender.com';

export const getUniverse = async () => {
  const res = await axios.get(`${API_URL}/api/items`);
  return res.data;
};

