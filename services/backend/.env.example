# Flask environment: development, production, testing
FLASK_ENV=development

# SQLite for local dev; replace with Postgres URI in production
SQLALCHEMY_DATABASE_URI=sqlite:///vault.db

# Base API URL for frontend to connect to (optional usage in frontend)
API_BASE_URL=https://aetherionai-mobile.onrender.com

# File storage path (local or mountable volume)
UPLOAD_FOLDER=uploads

# Max upload size in bytes (100MB default)
MAX_CONTENT_LENGTH=104857600

# JWT secret key for signing tokens (override this in production!)
JWT_SECRET=your_secret_key_here
