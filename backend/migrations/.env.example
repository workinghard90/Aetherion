# Copy this file to ".env" (do NOT commit .env), and fill in the real secrets before running locally.

# PostgreSQL (Render will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://username:password@hostname:5432/aetherion-db

# A random secret key for Flask sessions & JWT
SECRET_KEY=your-flask-secret-key

# For file uploads (in development, use local folder; on Render, set a writable directory)
UPLOAD_FOLDER=./uploads

# CORS_ORIGINS: a comma-separated list of allowed origins (e.g. frontend Netlify or Expo domain)
CORS_ORIGINS=http://localhost:19006,http://localhost:3000

# JWT Signing key (used by Flask-JWT-Extended)
JWT_SECRET=your-jwt-secret-key

# Flask environment
FLASK_ENV=development
